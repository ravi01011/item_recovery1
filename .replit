modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "frontend"

[[workflows.workflow]]
name = "frontend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && npm start & cd frontend && NODE_OPTIONS=--openssl-legacy-provider npm start"
waitForPort = 5000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35485
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "cd backend && npm start & cd frontend && NODE_OPTIONS=--openssl-legacy-provider PORT=5000 npm start"]
